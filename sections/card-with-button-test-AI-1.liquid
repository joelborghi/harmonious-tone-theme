{% schema %}
{
  "name": "Card Component",
  "tag": "section",
  "class": "card-component",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Lorem ipsum lorem ipsum"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text",
      "default": "CLICK HERE"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background Color",
      "default": "#d9d9d9"
    },
    {
      "type": "color",
      "id": "button_background_color",
      "label": "Button Background Color",
      "default": "#454545"
    },
    {
      "type": "color",
      "id": "button_text_color",
      "label": "Button Text Color",
      "default": "#ffffff"
    },
    {
      "type": "color",
      "id": "heading_color",
      "label": "Heading Color",
      "default": "#313131"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding Top",
      "default": 40
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding Bottom",
      "default": 52
    }
  ],
  "presets": [
    {
      "name": "Card Component"
    }
  ]
}
{% endschema %}

{%- style -%}
  .card-component {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .card-component {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }

  .card-component .card {
    background-color: {{ section.settings.background_color }};
    width: 371px;
    height: 369px;
    display: flex;
    flex-direction: column;
    align-items: center;
  }

  .card-component .card-heading {
    color: {{ section.settings.heading_color }};
    font-size: 20px;
    margin-top: 238px;
  }

  .card-component .card-button {
    background-color: {{ section.settings.button_background_color }};
    color: {{ section.settings.button_text_color }};
    font-size: 22px;
    padding: 16px;
    margin-top: 74px;
    cursor: pointer;
  }
{%- endstyle -%}

<div class="card-component">
  <div class="card">
    <div class="card-heading">{{ section.settings.heading }}</div>
    <div class="card-button">{{ section.settings.button_text }}</div>
  </div>
</div>

<script>
  const cardButton = document.querySelector('.card-button');

  cardButton.addEventListener('click', () => {
    // Handle button click event
    console.log('Button clicked');
  });
</script>
