{% if section.blocks.size == 0 %}
  <div>This section is empty.</div>
{% else %}
  {%- style -%}
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
      padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
    }

    @media screen and (min-width: 750px) {
      .section-{{ section.id }}-padding {
        padding-top: {{ section.settings.padding_top }}px;
        padding-bottom: {{ section.settings.padding_bottom }}px;
      }
    }

    .card {
      background-color: rgb({{ settings.card_bg_color }});
      width: 371px;
      height: 369px;
    }

    .card__content {
      padding: 31px 37px;
    }

    .card__image-wrapper {
      width: 296px;
      height: 182px;
      background-color: rgb({{ settings.card_image_bg_color }});
    }

    .card__text {
      color: rgb({{ settings.card_text_color }});
      font-size: 20px;
      margin-top: 25px;
    }

    .card__button {
      background-color: rgb({{ settings.card_button_bg_color }});
      color: rgb({{ settings.card_button_text_color }});
      font-size: 22px;
      padding: 16px;
      text-align: center;
      margin-top: 20px;
    }
  {%- endstyle -%}

  <div class="section-{{ section.id }}-padding">
    <div class="card">
      <div class="card__content">
        <div class="card__image-wrapper">
          {% if section.settings.card_image != blank %}
            {{ section.settings.card_image | image_url: width: 296 | image_tag }}
          {% else %}
            <div>No image selected</div>
          {% endif %}
        </div>
        <div class="card__text">{{ section.settings.card_text }}</div>
        <div class="card__button">
          {% if section.settings.card_button_url != blank %}
            <a href="{{ section.settings.card_button_url }}">{{ section.settings.card_button_text }}</a>
          {% else %}
            {{ section.settings.card_button_text }}
          {% endif %}
        </div>
      </div>
    </div>
  </div>
{% endif %}

{% schema %}
{
  "name": "Card with button V",
  "tag": "section",
  "class": "section-card",
  "settings": [
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding Top",
      "default": 40
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding Bottom",
      "default": 52
    },
    {
      "type": "image_picker",
      "id": "card_image",
      "label": "Card Image"
    },
    {
      "type": "text",
      "id": "card_text",
      "label": "Card Text",
      "default": "Lorem ipsum lorem ipsum"
    },
    {
      "type": "url",
      "id": "card_button_url",
      "label": "Button URL"
    },
    {
      "type": "text",
      "id": "card_button_text",
      "label": "Button Text",
      "default": "CLICK HERE"
    },
    {
      "type": "color",
      "id": "card_bg_color",
      "label": "Card Background Color",
      "default": "0.85,0.85,0.85"
    },
    {
      "type": "color",
      "id": "card_image_bg_color",
      "label": "Image Background Color",
      "default": "0.67,0.66,0.66"
    },
    {
      "type": "color",
      "id": "card_text_color",
      "label": "Text Color",
      "default": "0.19,0.18,0.18"
    },
    {
      "type": "color",
      "id": "card_button_bg_color",
      "label": "Button Background Color",
      "default": "0.27,0.24,0.24"
    },
    {
      "type": "color",
      "id": "card_button_text_color",
      "label": "Button Text Color",
      "default": "1,1,1"
    }
  ],
  "presets": [
    {
      "name": "Card with button V"
    }
  ]
}
{% endschema %}
