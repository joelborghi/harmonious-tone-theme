{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }

  .card {
    background-color: {{ section.settings.card_bg_color | default: '#D9D9D9' }};
    width: 371px;
    height: 369px;
  }

  .card__content {
    padding: 31px 37px;
  }

  .card__image-wrapper {
    width: 296px;
    height: 182px;
    background-color: {{ settings.card_image_bg_color }};
  }

  .card__text {
    color: {{ settings.card_text_color }};
    font-size: 20px;
    margin-top: 25px;
  }

  .card__button {
    background-color: {{ section.settings.card_button_bg_color }};
    color: {{ settings.card_button_text_color }};
    font-size: 22px;
    padding: 16px;
    text-align: center;
    margin-top: 20px;
  }
{%- endstyle -%}

<div class="section-{{ section.id }}-padding">
  <div class="card">
    <div class="card__content">
      <div class="card__image-wrapper">
        {% if section.settings.card_image != blank %}
          {{ section.settings.card_image | image_url: width: 296 | image_tag }}
        {% else %}
          <div>No image selected</div>
        {% endif %}
      </div>
      <div class="card__text">{{ section.settings.card_text }}</div>
      <div class="card__button">
        {% if section.settings.card_button_url != blank %}
          <a href="{{ section.settings.card_button_url }}">{{ section.settings.card_button_text }}</a>
        {% else %}
          {{ section.settings.card_button_text }}
        {% endif %}
      </div>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Card with button V",
  "tag": "section",
  "class": "section-card",
  "settings": [
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding Top",
      "default": 40
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding Bottom",
      "default": 52
    },
    {
      "type": "image_picker",
      "id": "card_image",
      "label": "Card Image"
    },
    {
      "type": "text",
      "id": "card_text",
      "label": "Card Text",
      "default": "Lorem ipsum lorem ipsum"
    },
    {
      "type": "url",
      "id": "card_button_url",
      "label": "Button URL"
    },
    {
      "type": "text",
      "id": "card_button_text",
      "label": "Button Text",
      "default": "CLICK HERE"
    },
    {
      "type": "color",
      "id": "card_bg_color",
      "label": "Card Background Color",
      "default": "#D9D9D9"
    },
    {
      "type": "color",
      "id": "card_image_bg_color",
      "label": "Image Background Color",
      "default": "#A9A8A8"
    },
    {
      "type": "color",
      "id": "card_text_color",
      "label": "Text Color",
      "default": "#303030"
    },
    {
      "type": "color",
      "id": "card_button_bg_color",
      "label": "Button Background Color",
      "default": "#440C0C"
    },
    {
      "type": "color",
      "id": "card_button_text_color",
      "label": "Button Text Color",
      "default": "#FFFFFF"
    }
  ],
  "presets": [
    {
      "name": "Card with button V"
    }
  ]
}
{% endschema %}
