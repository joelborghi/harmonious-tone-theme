{% comment %}
  Renders guitar brands carousel

  Usage:
  {% section 'guitar-brands-carousel' %}
{% endcomment %}

{% assign icon_width = 250 %}
{% assign icon_height = 200 %}

{{ 'component-brands-carousel.css' | asset_url | stylesheet_tag }}
<script src="{{ 'brands-carousel.js' | asset_url }}" defer="defer"></script>

<h4 class="brands-carousel__title">Shop by Brand</h4>
<div class="brands-carousel">
  <div class="brands-carousel__container">
    {% for i in (1..12) %}
      {% assign image_key = 'brand_' | append: i | append: '_image' %}
      {% assign link_key = 'brand_' | append: i | append: '_link' %}
      {% assign image = section.settings[image_key] %}
      {% assign link = section.settings[link_key] %}

      <p>Image Key: {{ image_key }} - Image URL: {{ image }}</p>
      <!-- Debug output -->

      {% if image %}
        <div class="brands-carousel__item">
          <a href="{{ link }}">
            <img
              src="{{ image }}"
              alt="Brand {{ i }}"
              class="brands-carousel"
              width="{{ icon_width }}"
              height="{{ icon_height }}"
            >
          </a>
        </div>
      {% else %}
        <p>No image found for Brand {{ i }}</p>
      {% endif %}
    {% endfor %}
  </div>
</div>

